<div class="container">
  <h1>Products</h1>
<br/>
<%= form_tag search_path, remote: true, method: :get do %>
<%= text_field_tag :search, params[:search], size: 30, class: "navbar-search-input" %>
<%= submit_tag "Search", class: "navbar-search-btn" , name: nil %>
<% end %>
<br>
<br>
<div id="result">
  <%= render "search", products: @products %>
</div>
</div>